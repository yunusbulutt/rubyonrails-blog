<div id="page_wrapper">
    <h1>Yazı Ekle</h1>

    <%= form_for :post, url: posts_path do |f| %>
    <p>
        <%= f.label :Başlık %><br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :İçerik %><br>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit :Kaydet %>
    </p>
    <% end %>
</div>