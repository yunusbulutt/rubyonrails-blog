<div id="post_content">
    <h1 class="title">
        <%= @post.title %>
    </h1>
    <p class="date"><%=l @post.created_at, format: :long , :locale => 'tr' %>, tarihinde yazıldı.
        | <%= link_to 'Düzenle', edit_post_path(@post) %>
        | <%= link_to 'Sil', post_path(@post), method: :delete, data: {confirm: 'Silmek İstediğinize Emin Misiniz ?' } %>
    </p>
    <p class="blog">
        <%= @post.body %>
    </p>

    <div id="comments">
        <h2><%= @post.comments.count %> Yorum</h2>
        <%= render @post.comments %>

        <h3>Bir yorum bırakın : </h3>
        <%= render "comments/form" %>
    </div>
</div>